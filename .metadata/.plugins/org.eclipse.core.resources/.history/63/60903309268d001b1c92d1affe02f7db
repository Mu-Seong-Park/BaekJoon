import java.io.*;
import java.util.*;

public class Problem_15829 {

	public static void main(String[] args) throws IOException {
		
		int r = 31;
		int M = 1234567891;
		
		BufferedReader bf = new BufferedReader(new InputStreamReader(System.in));
		
		int L = Integer.parseInt(bf.readLine());
		
		String str = bf.readLine();
		double ans = 0;
		for(int i = 0 ; i < str.length() ; i++)
		{
			if(str.charAt(i) == 'a')
			{
				ans = ans + (1 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'b')
			{
				ans = ans + (2 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'c')
			{
				ans = ans + (3 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'd')
			{
				ans = ans + (4 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'e')
			{
				ans = ans + (5 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'f')
			{
				ans = ans + (6 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'g')
			{
				ans = ans + (7 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'h')
			{
				ans = ans + (8 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'i')
			{
				ans = ans + (9 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'j')
			{
				ans = ans + (10 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'k')
			{
				ans = ans + (11 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'l')
			{
				ans = ans + (12 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'm')
			{
				ans = ans + (13 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'n')
			{
				ans = ans + (14 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'o')
			{
				ans = ans + (15 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'p')
			{
				ans = ans + (16 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'q')
			{
				ans = ans + (17 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'r')
			{
				ans = ans + (18 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 's')
			{
				ans = ans + (19 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 't')
			{
				ans = ans + (20 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'u')
			{
				ans = ans + (21 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'v')
			{
				ans = ans + (22 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'w')
			{
				ans = ans + (23 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'x')
			{
				ans = ans + (24 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'y')
			{
				ans = ans + (25 * Math.pow((double)r, (double)i));
			}
			else if(str.charAt(i) == 'z')
			{
				ans = ans + (26 * Math.pow((double)r, (double)i));
			}
			
		}
		
		System.out.println(ans);
		bf.close();
	}

}
