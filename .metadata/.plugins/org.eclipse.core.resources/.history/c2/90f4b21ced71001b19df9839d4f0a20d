import java.util.*;


public class Decomposition {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int n;
		
		n = sc.nextInt();
		int ans;
		
		for(int i = 0 ; i < 1000000 ; i++)
		{
			if(n / 10 == 0)
			{
				if(i * 2 == n)
				{
					ans = i;
					break;
				}
				else
				{
					ans = 0;
				}
			}
			
			else if (n / 10 > 0 && n / 10 < 100 )
			{
				if(i/100 + i % 100 + i == n)
				{
					ans = i;
					break;
				}
				else
				{
					ans = 0;
				}
			}
			
			else if (n / 10 > 99 && n / 10 < 1000 )
			{
				if(i/1000 + i % 1000 + i == n)
				{
					ans = i;
					break;
				}
				else
				{
					ans = 0;
				}
			}
		}
	}

}
